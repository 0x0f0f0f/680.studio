---
import type { NavBarItem } from '@/lib/navbar'
import MobileNav from '@/MobileNav'
import { FileAudio, Info, Mail, UsersRound } from 'lucide-react'
import { Button, buttonVariants } from './ui/button'
import Image from 'astro/components/Image.astro'

const navBarItems: NavBarItem[] = [
  {
    label: 'About',
    href: '/#about',
    icon: Info,
  },
  {
    label: 'Services',
    href: '/#services',
    icon: FileAudio,
  },
  {
    label: 'Team',
    href: '/#who',
    icon: UsersRound,
  },
  {
    label: 'Get in Touch',
    href: '/#contact',
    icon: Mail,
  },
]
---

<header
  class="sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60"
>
  <div
    class="container flex h-16 items-center space-x-4 px-4 sm:justify-between sm:space-x-0"
  >
    <div class="flex gap-6 md:gap-10">
      <a href="/" class="flex items-center space-x-2">
        <Image
          src="/logo.svg"
          width={200}
          height={200}
          class="z-100 z-50 mx-4 w-8 animate-blur"
          alt={'680Hz Studios, Production, Recording, Mixing and Mastering Studios in Berlin.'}
        />
        <span class="inline-block animate-blur font-bold">680Hz Studios</span>
      </a>
    </div>
    <div class="flex flex-1 animate-blur items-center justify-end space-x-4">
      <!-- <nav class="flex items-center space-x-1">
        {
          navBarItems.map((i) => (
            <a
              href={i.href}
              rel="noreferrer"
              class={buttonVariants({ variant: 'ghost' })}
            >
              {i.label}
            </a>
          ))
        }
      </nav> -->
      <div class="mr-4 hidden gap-2 md:flex">
        {
          navBarItems.map((i) => (
            <a
              href={i.href}
              rel="noreferrer"
              class={buttonVariants({ variant: 'ghost' })}
            >
              {i.label}
            </a>
          ))
        }
      </div>
      <MobileNav items={navBarItems} client:only="react" />
    </div>
  </div>
</header>
