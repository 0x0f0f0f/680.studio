---
import BaseLayout from '@/layouts/BaseLayout.astro'
import WordPullUp from '@/components/magicui/word-pull-up'
import { Separator } from '@/components/ui/separator'
import Who from '@/components/Who.astro'
import { VelocityScroll } from '@/components/magicui/scroll-based-velocity'
import BlurFade from '@/components/magicui/blur-fade'
import Services from '@/components/Services.astro'
import SineBackground from '@/components/SineBackground'
import Contact from '@/components/Contact.astro'
import ShimmerButton from '@/components/magicui/shimmer-button'
---

<BaseLayout
  title="680Hz Studios"
  description="Production, Recording, Mixing and Mastering Studios in Berlin."
>
  <SineBackground client:only />
  <section class="container grid items-center gap-6 pb-8 pt-6 md:py-10">
    <div class="flex w-full flex-col items-center gap-4">
      <div class="flex h-[90vh] flex-col items-center justify-center gap-4">
        <WordPullUp
          client:load
          className="text-4xl font-bold tracking-[-0.02em] text-black dark:text-white md:text-7xl md:leading-[5rem]"
          words="680 Hz Studios"
        />

        <BlurFade delay={0.25 * 0.05} inView client:load>
          <p class="max-w-[700px] text-center text-lg text-muted-foreground">
            Production, Recording, Mixing and Mastering Studios in Berlin.
          </p>
        </BlurFade>

        <BlurFade delay={0.25 * 0.05} inView client:load>
          <a href="#about">
            <!-- <PulsatingButton pulseColor="#000000" className={buttonVariants()}
              >Explore Our Services</PulsatingButton
            > -->
            <ShimmerButton className="shadow-2xl" client:only="react">
              <span
                class="gap-x-2 py-0 text-center text-sm font-medium leading-none tracking-tight text-white dark:from-white dark:to-slate-900/10 lg:text-lg"
              >
                Discover More
              </span>
            </ShimmerButton>
          </a>
        </BlurFade>
      </div>

      <Separator />
    </div>
  </section>

  <!-- ------------------- ABOUT -----------------  -->

  <div id="about"></div>

  <!-- <VelocityScroll
    text=" - About us "
    default_velocity={5}
    className="font-display text-center text-5xl font-bold tracking-[-0.02em] text-black drop-shadow-sm dark:text-white md:text-7xl md:leading-[5rem]"
    client:load
  /> -->

  <!-- ------------------- SERVICES -----------------  -->

  <div id="services"></div>

  <VelocityScroll
    text=" - Our services "
    default_velocity={5}
    className="font-display text-center text-5xl font-bold tracking-[-0.02em] text-black drop-shadow-sm dark:text-white md:text-7xl md:leading-[5rem]"
    client:load
  />

  <section class="container my-32 grid items-center gap-6">
    <Services />
  </section>

  <!-- ------------------- TEAM -----------------  -->

  <div id="who"></div>

  <VelocityScroll
    text=" - Who are we? "
    default_velocity={5}
    className="font-display text-center text-5xl font-bold tracking-[-0.02em] text-black drop-shadow-sm dark:text-white md:text-7xl md:leading-[5rem]"
    client:load
  />

  <section class="container my-32 grid items-center gap-6">
    <Who />
  </section>

  <!-- ------------------- CONTACT US -----------------  -->

  <div id="contact"></div>

  <section class="container my-32 grid items-center gap-6">
    <Separator />
    <Contact />
  </section>

  <!-- <section>
    <ClientsChart
      title="Our Clients"
      label="Our Clients"
      description="November 2022 - Now"
      footer="Trusting our professional audio services"
      chartData={[{ clients: 85, fill: 'var(--color-safari)' }]}
      client:load
    />

    <Separator />
  </section> -->
</BaseLayout>
